{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RFC Automation Repository Dispatch Payload",
  "type": "object",
  "required": ["event_id", "source", "timestamp", "payload"],
  "properties": {
    "event_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9-]{8,}$"
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
