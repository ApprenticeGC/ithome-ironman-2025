{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Payload for rfc.chain.broken",
  "type": "object",
  "required": ["chain_id", "reason"],
  "properties": {
    "chain_id": { "type": "string", "pattern": "^RFC-\d{3}-\d{2}$" },
    "reason": { "type": "string", "minLength": 1 },
    "states": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
