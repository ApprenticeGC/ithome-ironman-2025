# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Notion API Configuration
# Get your token from: https://www.notion.so/my-integrations
NOTION_TOKEN=ntn_your_notion_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# GitHub API Configuration
# For billing API access, create a fine-grained personal access token with:
# User permissions for "Plan" (read permission)
# This allows access to billing endpoints like:
# - GET /users/{username}/settings/billing/actions
# - GET /users/{username}/settings/billing/packages
# - GET /users/{username}/settings/billing/shared-storage
# - GET /users/{username}/settings/billing/usage
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# Auto-approve token for workflow automation
# This should be a token with repository write permissions
AUTO_APPROVE_TOKEN=ghp_your_auto_approve_token_here

# Classic GitHub token for billing API
# Fine-grained tokens may have limitations with billing endpoints
# Create a classic personal access token with 'user' scope for billing API access
USE_PROJECT_V2_TOKEN=ghp_your_classic_token_with_user_scope_here

# Python automation settings
PYTHON_ENV=production

# Badge configuration
BADGE_FILE_PATH=.github/badges/runner-usage.json
BADGE_DAYS_BACK=30
BADGE_MAX_WORKFLOWS=1000
