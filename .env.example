# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Notion API Configuration
# Get your token from: https://www.notion.so/my-integrations
NOTION_TOKEN=ntn_your_notion_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# GitHub API Configuration
# For billing API access, create a fine-grained personal access token with:
# User permissions for "Plan" (read permission)
# This allows access to billing endpoints like:
# - GET /users/{username}/settings/billing/actions
# - GET /users/{username}/settings/billing/packages
# - GET /users/{username}/settings/billing/shared-storage
# - GET /users/{username}/settings/billing/usage
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# Auto-approve token for workflow automation
# This should be a token with repository write permissions
AUTO_APPROVE_TOKEN=ghp_your_auto_approve_token_here

# Classic GitHub token for billing API
# Fine-grained tokens may have limitations with billing endpoints
# Create a classic personal access token with 'user' scope for billing API access
USE_PROJECT_V2_TOKEN=ghp_your_classic_token_with_user_scope_here

# Python automation settings
PYTHON_ENV=production

# Badge configuration
BADGE_FILE_PATH=.github/badges/runner-usage.json
BADGE_DAYS_BACK=30
BADGE_MAX_WORKFLOWS=1000

# GameConsole Deployment Configuration
# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
GAMEENGINE_LOG_LEVEL=Information

# Service Ports
GAMEENGINE_PORT=8080
REDIS_PORT=6379
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Database Configuration
POSTGRES_DB=gameengine
POSTGRES_USER=gameuser
POSTGRES_PASSWORD=gamepass123

# Docker Configuration
COMPOSE_PROJECT_NAME=gameconsole-dev
DOCKER_REGISTRY=ghcr.io
IMAGE_TAG=latest

# Deployment Secrets (set these in GitHub repository secrets)
DOCKER_REGISTRY_USERNAME=your_registry_username
DOCKER_REGISTRY_PASSWORD=your_registry_password
STAGING_DEPLOY_SSH_KEY=your_staging_ssh_private_key
STAGING_DEPLOY_HOST=staging.example.com
PRODUCTION_DEPLOY_SSH_KEY=your_production_ssh_private_key
PRODUCTION_DEPLOY_HOST=production.example.com

# Monitoring Configuration (optional)
ENABLE_MONITORING=false
METRICS_ENABLED=false

# Security Configuration
SECURITY_KEY_PATH=/app/keys
ENCRYPT_DATA=true

# Performance Configuration
MAX_MEMORY_MB=512
MAX_CPU_CORES=2
CACHE_SIZE_MB=128

# Logging Configuration
LOG_LEVEL=Information
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs
