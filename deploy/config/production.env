# Production Environment Configuration
ASPNETCORE_ENVIRONMENT=Production
GAMEENGINE_LOG_LEVEL=Warning

# Service Ports (production)
GAMEENGINE_PORT=8080
REDIS_PORT=6379
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Database Configuration
POSTGRES_DB=gameengine_prod
POSTGRES_USER=gameuser_prod
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# Docker Configuration
COMPOSE_PROJECT_NAME=gameconsole-production
IMAGE_TAG=production

# Production Settings
ENABLE_MONITORING=true
METRICS_ENABLED=true
DEBUG_MODE=false

# Performance (production optimized)
MAX_MEMORY_MB=2048
MAX_CPU_CORES=4
CACHE_SIZE_MB=512

# Logging (minimal for production)
LOG_LEVEL=Warning
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs

# Production-specific settings
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
HTTPS_ONLY=true
CORS_STRICT_MODE=true

# High Availability Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
GRACEFUL_SHUTDOWN_TIMEOUT=30s
MAX_REQUEST_SIZE=10MB
CONNECTION_TIMEOUT=30s

# Monitoring and Alerting
ALERT_WEBHOOK_URL=CONFIGURE_IN_SECRETS
METRICS_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# Backup Configuration
DATABASE_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=30