# Staging Environment Configuration
ASPNETCORE_ENVIRONMENT=Staging
GAMEENGINE_LOG_LEVEL=Information

# Service Ports (staging)
GAMEENGINE_PORT=8081
REDIS_PORT=6380
POSTGRES_PORT=5433
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001

# Database Configuration
POSTGRES_DB=gameengine_staging
POSTGRES_USER=gameuser_staging
POSTGRES_PASSWORD=stagingpass456

# Docker Configuration
COMPOSE_PROJECT_NAME=gameconsole-staging
IMAGE_TAG=staging

# Staging Settings
ENABLE_MONITORING=true
METRICS_ENABLED=true
DEBUG_MODE=false

# Performance (production-like)
MAX_MEMORY_MB=512
MAX_CPU_CORES=2
CACHE_SIZE_MB=128

# Logging (balanced for staging)
LOG_LEVEL=Information
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs

# Staging-specific features
FEATURE_FLAGS_ENABLED=true
EXPERIMENTAL_FEATURES=true
PERFORMANCE_PROFILING=true